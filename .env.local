# ResistNet Wallet - Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# API Keys & Authentication
# ============================================

# Gitcoin Passport API
# Get yours at: https://scorer.gitcoin.co/
NEXT_PUBLIC_GITCOIN_API_KEY=your_gitcoin_api_key_here
NEXT_PUBLIC_GITCOIN_SCORER_ID=your_scorer_id_here

# Humanity Protocol API
# Contact team at: https://www.humanity.tech/
NEXT_PUBLIC_HUMANITY_API_KEY=your_humanity_api_key_here
HUMAN_API_KEY=

# ============================================
# Blockchain & RPC Configuration
# ============================================

# Ethereum Network
NEXT_PUBLIC_ETHEREUM_NETWORK=mainnet
NEXT_PUBLIC_CHAIN_ID=1

# Nimbus RPC URL (local or remote)
# Local: http://localhost:8545
# Sepolia: https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY
# Mainnet: https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
NEXT_PUBLIC_NIMBUS_RPC_URL=http://localhost:8545

# Alternative: Use Alchemy or Infura
# NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_key
# NEXT_PUBLIC_INFURA_PROJECT_ID=your_infura_id

# ============================================
# Tor Configuration
# ============================================

# Tor SOCKS5 Proxy
NEXT_PUBLIC_TOR_PROXY=socks5://127.0.0.1:9150

# Enable/Disable Tor routing
NEXT_PUBLIC_TOR_ENABLED=true

# Tor control port (optional)
# NEXT_PUBLIC_TOR_CONTROL_PORT=9051
# NEXT_PUBLIC_TOR_CONTROL_PASSWORD=your_tor_password

# ============================================
# Waku Configuration
# ============================================

# Use default bootstrap nodes
NEXT_PUBLIC_WAKU_BOOTSTRAP=true

# Custom Waku nodes (optional)
# NEXT_PUBLIC_WAKU_NODES=/dns4/node1.waku.org/tcp/30303/p2p/16Uiu2HAm...,/dns4/node2.waku.org/tcp/30303/p2p/16Uiu2HAm...

# Waku content topic prefix
NEXT_PUBLIC_WAKU_CONTENT_TOPIC=/resistnet/1

# ============================================
# IPFS Configuration
# ============================================

# Public IPFS Gateway
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io

# IPFS API URL (Infura or local)
NEXT_PUBLIC_IPFS_API_URL=https://ipfs.infura.io:5001

# Infura IPFS Project Credentials
# Get yours at: https://infura.io/product/ipfs
NEXT_PUBLIC_IPFS_PROJECT_ID=your_infura_project_id
NEXT_PUBLIC_IPFS_PROJECT_SECRET=your_infura_project_secret

# Pinata (optional)
# PINATA_JWT=your_pinata_jwt_token

# ============================================
# Nillion Configuration
# ============================================

# Nillion Network (testnet or mainnet)
NEXT_PUBLIC_NILLION_NETWORK=testnet

# Nillion App ID
NEXT_PUBLIC_NILLION_APP_ID=your_nillion_app_id

# Nillion Cluster Endpoint (optional)
# NEXT_PUBLIC_NILLION_ENDPOINT=https://testnet.nillion.com

# ============================================
# Storage & Deployment
# ============================================

# Arweave Wallet (for permanent storage)
# Generate with: arweave key-create wallet.json
# ARWEAVE_WALLET_PATH=./wallet.json

# Web3.Storage Token
# Get yours at: https://web3.storage
# WEB3_STORAGE_TOKEN=your_web3_storage_token

# Fleek Configuration
# FLEEK_API_KEY=your_fleek_api_key

# ============================================
# Feature Flags
# ============================================

# Enable MPC Key Management
NEXT_PUBLIC_ENABLE_MPC_KEYS=true

# Enable Private Voting
NEXT_PUBLIC_ENABLE_PRIVATE_VOTING=true

# Enable Evidence Vault
NEXT_PUBLIC_ENABLE_EVIDENCE_VAULT=true

# Enable Censorship-Resistant Publishing
NEXT_PUBLIC_ENABLE_PUBLISHING=true

# Enable Governance Features
NEXT_PUBLIC_ENABLE_GOVERNANCE=true

# ============================================
# Privacy & Security Settings
# ============================================

# Minimum Passport Score for Actions
NEXT_PUBLIC_MIN_SCORE_PUBLISH=15
NEXT_PUBLIC_MIN_SCORE_VOTE=10
NEXT_PUBLIC_MIN_SCORE_UPLOAD_EVIDENCE=20
NEXT_PUBLIC_MIN_SCORE_REPORT=15
NEXT_PUBLIC_MIN_SCORE_GRANT_ACCESS=25

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true
NEXT_PUBLIC_RATE_LIMIT_MESSAGES_PER_HOUR=100
NEXT_PUBLIC_RATE_LIMIT_PUBLICATIONS_PER_DAY=10

# ============================================
# Development & Debugging
# ============================================

# Debug Mode (shows detailed logs)
NEXT_PUBLIC_DEBUG_MODE=false

# Log Level (error, warn, info, debug)
NEXT_PUBLIC_LOG_LEVEL=info

# Enable Analytics (privacy-preserving)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Development Mode
NODE_ENV=development

# ============================================
# Optional: Smart Contract Addresses
# ============================================

# If you deploy custom contracts
# NEXT_PUBLIC_REGISTRY_CONTRACT=0x...
# NEXT_PUBLIC_GOVERNANCE_CONTRACT=0x...
# NEXT_PUBLIC_VAULT_CONTRACT=0x...

# ============================================
# Optional: Custom Branding
# ============================================

# App Name
NEXT_PUBLIC_APP_NAME=ResistNet

# App Description
NEXT_PUBLIC_APP_DESCRIPTION=Privacy-first censorship-resistant platform

# Support Email
NEXT_PUBLIC_SUPPORT_EMAIL=support@resistnet.example

# ============================================
# Optional: Monitoring & Alerts
# ============================================

# Sentry (Error Tracking)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# PostHog (Privacy-friendly Analytics)
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com